{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
	    "eslint:recommended",
	    "plugin:import/react"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "sort-imports": ["error", {
            "ignoreCase": true,
            "ignoreMemberSort": false,
            "memberSyntaxSortOrder": ["single", "multiple", "all", "none"]
        }]
    },
    "settings": {
        "import/resolver": {
	    "node": {
                "extensions": [".js", ".jsx"]
	    }
	}
    }	
}
